#!/usr/bin/env python

VERSION = '1.7.9'

import sys, os, os.path

# Configure to be the relative path to the root of
# the Peach repo. eg: subdir = 'Peach'
subdir = None

if not subdir:
        print 'Error, the "subdir" variable in "%s" must be configured' % os.path.join(cwd, 'waf')
        sys.exit(1)

if sys.platform == "cygwin":
        print 'waf must be run from cmd.exe'
        sys.exit(1)

if os.getenv('DevEnvDir'):
        print 'waf can not be run from a Visual Studio Command Prompt'
        sys.exit(1)

cwd = os.getcwd()
build = os.path.join(cwd, subdir, 'build')
wafdir = os.path.join(cwd, subdir, '3rdParty', 'waf')
sys.path = [ build, wafdir ] + sys.path

if __name__ == '__main__':
	from waflib import Scripting
	Scripting.waf_entry_point(cwd, VERSION, wafdir)
