<?xml version="1.0" encoding="utf-8"?>
<Peach xmlns="http://peachfuzzer.com/2012/Peach" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"	xsi:schemaLocation="http://peachfuzzer.com/2012/Peach ../peach.xsd">

	<DataModel name="ModbusHeader">
		  <!-- Modbus Header -->
		  <Number name="trans_id" size="16" mutable="false">
			<Fixup class="SequenceIncrementFixup" />
		  </Number>
		  <Number name="proto_id" size="16"  value="0000" valueType="hex"  endian="network" mutable="false" />
		  <!-- len = PDU + 1 (unit_id) -->
		  <Number name="len" size="16" value="0006" valueType="hex" endian="network" mutable="false">
			<Relation type="size" of="PDU" expressionSet="size+8"/>
		  </Number>
		  <Number name="unit_id" size="8" value="01" valueType="hex" endian="network" mutable="false" />
	</DataModel>

	<DataModel name="ModbusPDU1ReadCoilsRequest" ref="ModbusHeader">
		<Block name="PDU">
		  <!-- 0x01 1 Read Coils -->
		  <Number name="1func_code" size="8" value="01" valueType="hex" endian="network" mutable="false" />
		  <Number name="1start_addr" size="16" value="3006" valueType="hex" endian="network" mutable="true" />
		  <Number name="1qty" size="16" value="0001" valueType="hex" endian="network" mutable="true" />
		</Block>
	</DataModel>

<!--

	<DataModel name="ModbusP	DU1ReadCoilsResponse" ref="ModbusHeader">

		<Block name="PDU">

		  <Number name="func_code" size="8" value="01" valueType="hex" endian="network" mutable="false" />

		  <Number name="byte_count" size="8" value="00" valueType="hex" endian="network">

		  	<Relation type="size" of="coil_status" />

		  </Number>

		  <Number name="coil_status" size="16" value="0001" valueType="hex" endian="network" />

		</Block>

	</DataModel>

-->

	<DataModel name="ModbusPDU2ReadDiscreteInputsRequest" ref="ModbusHeader">
		<Block name="PDU">
		  <!-- 0x02 2 Read Discrete Inputs -->
		  <Number name="2func_code" size="8" value="02" valueType="hex" endian="network" mutable="false" />
		  <Number name="2start_addr" size="16" value="3006" valueType="hex" endian="network" mutable="true" />
		  <Number name="2qty" size="16" value="0001" valueType="hex" endian="network" mutable="true" />
		</Block>
	</DataModel>



	<DataModel name="ModbusPDU3ReadHoldingRegistersRequest" ref="ModbusHeader">
		<Block name="PDU">
		  <!-- 0x03 3 Read Holding Registers (aka Read Multiple Registers) -->
		  <Number name="3func_code" size="8" value="03" valueType="hex" endian="network" mutable="false" />
		  <Number name="3start_addr" size="16" value="3006" valueType="hex" endian="network" mutable="true" />
		  <Number name="3qty" size="16" value="0001" valueType="hex" endian="network" mutable="true" />
		</Block>
	</DataModel>



	<DataModel name="ModbusPDU4ReadInputRegistersRequest" ref="ModbusHeader">
		<Block name="PDU">
		  <!-- 0x04 4 Read Input Registers -->
		  <Number name="4func_code" size="8" value="04" valueType="hex" endian="network" mutable="false" />
		  <Number name="4start_addr" size="16" value="3006" valueType="hex" endian="network" mutable="true" />
		  <Number name="4qty" size="16" value="0001" valueType="hex" endian="network" mutable="true" />
		</Block>
	</DataModel>

	<DataModel name="ModbusPDU5WriteSingleCoilRequest" ref="ModbusHeader">
		<Block name="PDU">
		  <!-- 0x05 5 Write Single Coil -->
		  <Number name="5func_code" size="8" value="05" valueType="hex" endian="network" mutable="false" />
		  <Number name="5output_addr" size="16" value="0000" valueType="hex" endian="network" mutable="true" />
		  <Number name="5output_value" size="16" value="FF00" valueType="hex" endian="network" mutable="true" />
		</Block>
	</DataModel>



	<DataModel name="ModbusPDU6WriteSingleRegisterRequest" ref="ModbusHeader">
		<Block name="PDU">
		  <!-- 0x06 6 Write Single Register -->
		  <Number name="6func_code" size="8" value="06" valueType="hex" endian="network" mutable="false" />
		  <Number name="6register_addr" size="16" value="0000" valueType="hex" endian="network" mutable="true" />
		  <Number name="6register_value" size="16" value="FFFF" valueType="hex" endian="network" mutable="true" />
		</Block>
	</DataModel>



	<DataModel name="ModbusPDU15WriteMultipleCoilsRequest" ref="ModbusHeader">
		<Block name="PDU">
		  <!-- 0x0F 15 Write Multiple Coils -->
		  <Number name="7func_code" size="8" value="0F" valueType="hex" endian="network" mutable="false" />
		  <Number name="7start_addr" size="16" value="3006" valueType="hex" endian="network" mutable="true" />
		  <Number name="77777777qty" size="16" value="0001" valueType="hex" endian="network" mutable="true" />
		  <Number name="7byte_count" size="8" value="02" valueType="hex" endian="network" mutable="true" />
		  <Number name="7bytes" size="16" value="0050" valueType="hex" endian="network" mutable="true" />
		</Block>
	</DataModel>



	<DataModel name="ModbusPDU16WriteMultipleRegistersRequest" ref="ModbusHeader">
		<Block name="PDU">
		  <!-- 0x10 16 Write Multiple Registers -->
		  <Number name="8func_code" size="8" value="10" valueType="hex" endian="network" mutable="false" />
		  <Number name="8start_addr" size="16" value="3006" valueType="hex" endian="network" mutable="true" />
		  <Number name="8qty" size="16" value="0001" valueType="hex" endian="network" mutable="true" />
		  <Number name="8byte_count" size="8" value="02" valueType="hex" endian="network" mutable="true" />
		  <Number name="8bytes" size="16" value="CD01" valueType="hex" endian="network" mutable="true" />
		</Block>
	</DataModel>



	<DataModel name="ModbusPDU20ReadFileRecordRequest" ref="ModbusHeader">
		<Block name="PDU">
		  <!-- 0x14 20 Read File Record -->
		  <Number name="9func_code" size="8" value="14" valueType="hex" endian="network" mutable="false" />
		  <Number name="9byte_count" size="8" value="F5" valueType="hex" endian="network" mutable="true" />
		  <!-- subreq -->
		  <Number name="9subreq_ref_type" size="8" value="06" valueType="hex" endian="network" mutable="true" />
		  <Number name="9subreq_file_no" size="16" value="FFFF" valueType="hex" endian="network" mutable="true" />
		  <Number name="9subreq_record_no" size="16" value="270F" valueType="hex" endian="network" mutable="true" />
		  <Number name="9subreq_record_lenght" size="16" value="FFFF" valueType="hex" endian="network" mutable="true" />
		</Block>
	</DataModel>



	<DataModel name="ModbusPDU21WriteFileRecordRequest" ref="ModbusHeader">
		<Block name="PDU">
		  <!-- 0x15 21 Write File Record -->
		  <Number name="func_code1" size="8" value="15" valueType="hex" endian="network" mutable="false" />
		  <Number name="byte_count1" size="8" value="F5" valueType="hex" endian="network" mutable="true" />
		  <!-- subreq -->
		  <Number name="subreq_ref_type1" size="8" value="06" valueType="hex" endian="network" mutable="true" />
		  <Number name="subreq_file_no1" size="16" value="FFFF" valueType="hex" endian="network" mutable="true" />
		  <Number name="subreq_record_n1o" size="16" value="270F" valueType="hex" endian="network" mutable="true" />
		  <Number name="subreq_record_lenght1" size="16" value="FFFF" valueType="hex" endian="network" mutable="true" />
		  <Number name="subreq_record_data1" size="32" value="FFFFFFFF" valueType="hex" endian="network" mutable="true" />
		</Block>
	</DataModel>



	<DataModel name="ModbusPDU22MaskWriteRegisterRequest" ref="ModbusHeader">
		<Block name="PDU">
		  <!-- 0x16 22 Mask Write Register -->
		  <Number name="func_code2" size="8" value="16" valueType="hex" endian="network" mutable="false" />
		  <Number name="ref_add2r" size="16" value="0000" valueType="hex" endian="network" mutable="true" />
		  <Number name="and_mas2k" size="16" value="FFFF" valueType="hex" endian="network" mutable="true" />
		  <Number name="or_mask2" size="16" value="FFFF" valueType="hex" endian="network" mutable="true" />
		</Block>
	</DataModel>



	<DataModel name="ModbusPDU23ReadWriteMultipleRegistersRequest" ref="ModbusHeader">
		<Block name="PDU">
	  <!-- 0x17 23 Read Write Register -->
		  <Number name="func_code3" size="8" value="17" valueType="hex" endian="network" mutable="false" />
		  <Number name="read_start_ad3dr" size="16" value="0000" valueType="hex" endian="network" mutable="true" />
		  <Number name="read_qty3" size="16" value="007D" valueType="hex" endian="network" mutable="true" />
		  <Number name="write_start_add3r" size="16" value="FFFF" valueType="hex" endian="network" mutable="true" />
		  <Number name="write_qt3y" size="16" value="0079" valueType="hex" endian="network" mutable="true" />
		  <Number name="write_byte_count3" size="8" value="00" valueType="hex" endian="network" mutable="true" />
		  <Number name="write_value3" size="32" value="00000000" valueType="hex" endian="network" mutable="true" />
		</Block>
	</DataModel>



	<DataModel name="ModbusPDU24ReadFIFOQueueRequest" ref="ModbusHeader">
		<Block name="PDU">
	  <!-- 0x18 24 Read FIFO Queue -->
		  <Number name="func_cod4e" size="8" value="18" valueType="hex" endian="network" mutable="false" />
		  <Number name="fifo_ptr_ad4dr" size="16" value="FFFF" valueType="hex" endian="network" mutable="true" />
		</Block>
	</DataModel>



	<StateModel name="ModbusStateModel" initialState="InitialState">
		<State name="InitialState">
			<Action type="output">
				<DataModel ref="ModbusPDU1ReadCoilsRequest" />
			</Action>
		</State>

		<State name="InitialState2">
			<Action type="output">
				<DataModel ref="ModbusPDU1ReadCoilsRequest" />
			</Action>
		</State>
		<State name="InitialState3">
			<Action type="output">
				<DataModel ref="ModbusPDU2ReadDiscreteInputsRequest" />
			</Action>
		</State>
		<State name="InitialState4">
			<Action type="output">
				<DataModel ref="ModbusPDU3ReadHoldingRegistersRequest" />
			</Action>
		</State>
		<State name="InitialState5">
			<Action type="output">
				<DataModel ref="ModbusPDU4ReadInputRegistersRequest" />
			</Action>
		</State>
		<State name="InitialState6">
			<Action type="output">
				<DataModel ref="ModbusPDU5WriteSingleCoilRequest" />
			</Action>
		</State>
		<State name="InitialState7">
			<Action type="output">
				<DataModel ref="ModbusPDU6WriteSingleRegisterRequest" />
			</Action>
		</State>
		<State name="InitialState8">
			<Action type="output">
				<DataModel ref="ModbusPDU15WriteMultipleCoilsRequest" />
			</Action>
		</State>
		<State name="InitialState9">
			<Action type="output">
				<DataModel ref="ModbusPDU16WriteMultipleRegistersRequest" />
			</Action>
		</State>
		<State name="InitialState10">
			<Action type="output">
				<DataModel ref="ModbusPDU20ReadFileRecordRequest" />
			</Action>
		</State>
		<State name="InitialState11">
			<Action type="output">
				<DataModel ref="ModbusPDU21WriteFileRecordRequest" />
			</Action>

		</State>
		<State name="InitialState12">
			<Action type="output">
				<DataModel ref="ModbusPDU22MaskWriteRegisterRequest" />
			</Action>
		</State>
		<State name="InitialState13">
			<Action type="output">
				<DataModel ref="ModbusPDU23ReadWriteMultipleRegistersRequest" />
			</Action>
		</State>
		<State name="InitialState14">
			<Action type="output">
				<DataModel ref="ModbusPDU24ReadFIFOQueueRequest" />
			</Action>
		</State>
	</StateModel>

	<Agent name="LinAgent" >
		<Monitor class="Process">
						<Param name="RestartOnEachTest" value="true" />
						<Param name="Executable" value="./libmodbus-3.1.4/tests/server" />
						<!-- <Param name="StartOnCall" value="Start" /> -->
						<Param name="Arguments" value=" 13220" />

		</Monitor>
	</Agent>

	<Test name="Default">
		<Agent ref="LinAgent" platform="linux"/>
		<StateModel ref="ModbusStateModel"/>
			<Publisher class="Tcp">
				<Param name="Host" value="127.0.0.1" />
					<Param name="Port" value="13220" />
			</Publisher>

			<Logger class="Filesystem">
			<Param name="Path" value="Logs" />
			</Logger>
	</Test>
</Peach>

